{
  "name": "theme-scheduler-zen",
  "displayName": "Theme Scheduler Zen",
  "description": "Automatically switch VS Code themes based on sunrise/sunset or custom schedule",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "theme-scheduler.enable",
        "title": "Theme Scheduler: Enable Auto Switching"
      },
      {
        "command": "theme-scheduler.disable",
        "title": "Theme Scheduler: Disable Auto Switching"
      },
      {
        "command": "theme-scheduler.switchNow",
        "title": "Theme Scheduler: Switch Theme Now"
      }
    ],
    "configuration": {
      "title": "Theme Scheduler",
      "properties": {
        "themeScheduler.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic theme switching"
        },
        "themeScheduler.mode": {
          "type": "string",
          "enum": [
            "sunriseSunset",
            "manual"
          ],
          "default": "sunriseSunset",
          "description": "Choose between automatic sunrise/sunset detection or manual time settings"
        },
        "themeScheduler.dayTheme": {
          "type": "string",
          "default": "Default Light+",
          "description": "Theme to use during daytime/sunrise"
        },
        "themeScheduler.nightTheme": {
          "type": "string",
          "default": "Default Dark+",
          "description": "Theme to use during nighttime/sunset"
        },
        "themeScheduler.latitude": {
          "type": "number",
          "default": 40.7128,
          "description": "Latitude for sunrise/sunset calculation (default: New York)"
        },
        "themeScheduler.longitude": {
          "type": "number",
          "default": -74.006,
          "description": "Longitude for sunrise/sunset calculation (default: New York)"
        },
        "themeScheduler.manualDayTime": {
          "type": "string",
          "default": "07:00",
          "description": "Time to switch to day theme (HH:MM format, 24-hour)"
        },
        "themeScheduler.manualNightTime": {
          "type": "string",
          "default": "19:00",
          "description": "Time to switch to night theme (HH:MM format, 24-hour)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "npm run compile -- --watch",
    "package": "vsce package"
  },
  "publisher": "virtualp1",
  "icon": "icon.png",
  "keywords": [
    "theme",
    "dark mode",
    "light mode",
    "sunrise",
    "sunset"
  ],
  "author": "virtualp1",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:viirtualp1/theme-scheduler.git"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.99.0",
    "@vscode/vsce": "^2.26.0",
    "esbuild": "^0.27.0",
    "prettier": "^3.6.2",
    "suncalc3": "^2.0.5",
    "typescript": "^5.9.3",
    "vscode-test": "^1.6.1"
  }
}
